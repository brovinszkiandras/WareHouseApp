<Window x:Class="WH_APP_GUI.AdminHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WH_APP_GUI"
        mc:Ignorable="d"
        Title="AdminHomePage" Height="600" Width="800">
    <Grid>
        <Grid Margin="0,0,640,0" Background="Black">
            <Label Content="Admin name:" Foreground="White" Height="25" Margin="0,0,0,409"/>
            <Label Name="AdminNameDisplay" Content="Admin name display:" Foreground="White" Margin="0,30,0,374" BorderThickness="0,0,0,1" BorderBrush="White" Height="30"/>
            <Label Content="Admin email:" Foreground="White" Height="25" Margin="0,65,0,344"/>
            <Label Content="Admin email display:" Name="AdminEmailDisplay" Foreground="White" Margin="0,95,0,309" BorderThickness="0,0,0,1" BorderBrush="White" Height="30" Width="160"/>
            <Button Width="150" Height="35" Content="Loging as Admin" Name="LoginAsAdmin" Click="LoginAsAdmin_Click"/>
        </Grid>
        <Grid x:Name="Display" Margin="160,0,160,0">
            <Label Name="InfoContentLBL" Height="450" Margin="65,21,65,113" Width="350" BorderBrush="Red" BorderThickness="1"/>
            <Button Content="Display" Name="IncludeFeture" Height="30" Width="150" Margin="0,500,0,30" Click="IncludeFeture_Click"/>
        </Grid>
        <Grid Margin="640,0,0,0" Background="Black">
            <Button Content="Create required tables" Name="CreateRequiredTablesBTN" IsEnabled="True" Width="150" Height="30" Margin="5,10,5,544" BorderBrush="White" Background="Black" Foreground="White" Click="CreateRequiredTablesBTN_Click"/>
            <Grid x:Name="FeaturesDisplay" Visibility="Visible" Margin="0,45,0,0">
                <StackPanel Name="FeaturesDisplayG"/>


            </Grid>
        </Grid>
    </Grid>
</Window>
