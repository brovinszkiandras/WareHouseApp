<Window x:Class="WH_APP_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WH_APP_GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="650" Width="800">
    <Grid>
        <Grid x:Name="LogIn" Background="#FF8D5454" Visibility="Visible">
            <Label Content="Name:" Width="150" Height="25" Margin="325,186,325,373"/>
            <TextBox x:Name="RegisterAdminName" Width="150" Height="25" Margin="325,216,325,343"/>
            <Label Content="Emali:" Width="150" Height="25" Margin="325,246,325,313"/>
            <TextBox x:Name="RegisterAdminEmail" Width="150" Height="25" Margin="325,276,325,283"/>
            <Label Content="Password:" Width="150" Height="25" Margin="325,306,325,253"/>
            <TextBox x:Name="RegisterAdminPassword" Width="150" Height="25" Margin="325,336,325,223"/>

            <Button Content="Register As Admin" x:Name="LogInBTN" Width="150" Height="25" Margin="325,366,325,193" Click="LogInBTN_Click"/>
        </Grid>
        <Grid x:Name="DatabaseSet" Background="#FF659852" Visibility="Collapsed" Margin="300,0,300,0">
            <Label Content="Enter the datasource:" Height="25" Margin="0,30,0,479"/>
            <TextBox x:Name="DataSourceFU" Height="25" Margin="0,60,0,449"/>
            <Label Content="Enter the port number:" Height="25" Margin="0,90,0,419"/>
            <TextBox x:Name="portFU" Height="25" Margin="0,120,0,389"/>
            <Label Content="Enter the username of the database:" Height="25" Margin="0,150,0,359"/>
            <TextBox x:Name="usernameFU" Height="25" Margin="0,180,0,329"/>
            <Label Content="Enter the password to the database:" Height="25" Margin="0,210,0,299"/>
            <TextBox x:Name="passwrdFU" Height="25" Margin="0,240,0,269"/>
            <Label Content="Enter the database name:" Height="25" Margin="0,270,0,239"/>
            <TextBox x:Name="DatabaseNameFU" Height="25" Margin="0,300,0,209"/>

            <Button Content="Confirm" x:Name="ConfirmDBdatas" Width="150" Height="25" Margin="0,330,0,179" Click="ConfirmDBdatas_Click"/>
        </Grid>
    </Grid>
</Window>
