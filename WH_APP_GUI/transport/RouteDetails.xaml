<Window x:Class="WH_APP_GUI.transport.RouteDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WH_APP_GUI.transport"
        mc:Ignorable="d"
        Title="RouteDetails" Height="500" Width="400" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <TextBlock Text="Transport details:" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <Border BorderBrush="Black" BorderThickness="0,1,0,0"/>

                <Border Margin="5" BorderBrush="Black" BorderThickness="1">
                    <Grid Name="MapDisplay" MinHeight="150" />
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                    <StackPanel Name="GasPrices"/>
                </Border>

                <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                    <StackPanel Name="Orders" Margin="5"/>
                </Border>

                <Button Content="Done" Margin="5"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
