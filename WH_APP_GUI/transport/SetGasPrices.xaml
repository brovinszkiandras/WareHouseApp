<Window x:Class="WH_APP_GUI.transport.SetGasPrices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WH_APP_GUI.transport"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="SetGasPrices" Height="500" Width="400" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <Label Content="Gas Info:" BorderBrush="Black" BorderThickness="0,0,0,1" HorizontalContentAlignment="Center"/>

                <TextBlock Name="Details" Margin="5" TextWrapping="Wrap"/>
                <TextBlock Text="Choose a gas price with which you refueled on the route or enter a new value:" Margin="5" TextWrapping="Wrap" VerticalAlignment="Top"/>

                <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                    <StackPanel Name="GasPrices"/>
                </Border>

                <Button Content="Done" Name="Done" Margin="5" Click="Done_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
